<?xml version="1.0" encoding="UTF-8"?>
<project name="module_glitchart" default="compile.module.glitchart">
  <dirname property="module.glitchart.basedir" file="${ant.file.module_glitchart}"/>
  
  <property name="module.jdk.home.glitchart" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.glitchart" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.glitchart" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.glitchart" value="${compiler.args}"/>
  
  <property name="glitchart.output.dir" value="${module.glitchart.basedir}/target/classes"/>
  <property name="glitchart.testoutput.dir" value="${module.glitchart.basedir}/target/test-classes"/>
  
  <path id="glitchart.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="glitchart.module.production.classpath">
    <path refid="${module.jdk.classpath.glitchart}"/>
    <path refid="library.maven:_commons-cli:commons-cli:1.2.classpath"/>
  </path>
  
  <path id="glitchart.runtime.production.module.classpath">
    <pathelement location="${glitchart.output.dir}"/>
    <path refid="library.maven:_commons-cli:commons-cli:1.2.classpath"/>
  </path>
  
  <path id="glitchart.module.classpath">
    <path refid="${module.jdk.classpath.glitchart}"/>
    <pathelement location="${glitchart.output.dir}"/>
    <path refid="library.maven:_commons-cli:commons-cli:1.2.classpath"/>
  </path>
  
  <path id="glitchart.runtime.module.classpath">
    <pathelement location="${glitchart.testoutput.dir}"/>
    <pathelement location="${glitchart.output.dir}"/>
    <path refid="library.maven:_commons-cli:commons-cli:1.2.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.glitchart">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.glitchart">
    <patternset refid="excluded.from.module.glitchart"/>
  </patternset>
  
  <path id="glitchart.module.sourcepath">
    <dirset dir="${module.glitchart.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.glitchart" depends="compile.module.glitchart.production,compile.module.glitchart.tests" description="Compile module GlitchArt"/>
  
  <target name="compile.module.glitchart.production" depends="register.custom.compilers" description="Compile module GlitchArt; production classes">
    <mkdir dir="${glitchart.output.dir}"/>
    <javac2 destdir="${glitchart.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.glitchart}/javac">
      <compilerarg line="${compiler.args.glitchart}"/>
      <bootclasspath refid="glitchart.module.bootclasspath"/>
      <classpath refid="glitchart.module.production.classpath"/>
      <src refid="glitchart.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.glitchart"/>
    </javac2>
    
    <copy todir="${glitchart.output.dir}">
      <fileset dir="${module.glitchart.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.glitchart.tests" depends="register.custom.compilers,compile.module.glitchart.production" description="compile module GlitchArt; test classes" unless="skip.tests"/>
  
  <target name="clean.module.glitchart" description="cleanup module">
    <delete dir="${glitchart.output.dir}"/>
    <delete dir="${glitchart.testoutput.dir}"/>
  </target>
</project>